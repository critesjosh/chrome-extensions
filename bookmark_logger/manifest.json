{

  "manifest_version": 2,
  "name": "Curated Content",
  "version": "1.0",

  "description": "Saves sites to MongoDB.",

  "icons": {
    "48": "icons/border-48.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/border-48.png"
    },
  "permissions": [
    "bookmarks",
    "tabs",
    "http://localhost:8080/",
    "https://brand-site.herokuapp.com/",
    "http://*/*",
    "https://*/*"
  ]

}
